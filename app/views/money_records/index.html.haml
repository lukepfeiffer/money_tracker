#history
  %h1 History
  .history-form
    = link_to 'All Records', money_records_path(start_date: money_records.first.created_at.to_date, end_date: Date.today, filter: 'all')
    = link_to 'Active Records', money_records_path(start_date: active_records.first.created_at.to_date, end_date: Date.today, filter: 'active')
    = form_tag money_records_path, method: 'get' do
      %fieldset
        %dt= label_tag :category
        %dd= select_tag :category_id, options_for_select(active_categories.collect { |category| [category.name.titleize, category.id] }, 1), {}

        %dt= label_tag :start_date
        %dd= date_field_tag :start_date

        %dt= label_tag :end_date
        %dd= date_field_tag :end_date

      %fieldset.actions
        = submit_tag 'Search'

%h1 #{@start_date} - #{@end_date}
%p
  Total Spent:
  %span.amount= MoneyRecord.sum(filtered_money_records)
