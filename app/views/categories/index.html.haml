#categories
  = render "new_category_modal"

  .container
    %ul.categories
      = render partial: 'category_container', collection: active_categories, as: :category
    %ul.selected-category
      %h1.records_for All Records
      %table.tables
        %thead
          %tr
            %th Date
            %th Category
            %th Description
            %th Amount
        %tbody
          - MoneyRecord.all.each do |record|
            %tr.tables-row
              %td.text= record.adjusted_date.strftime("%-m/%d/%y %I:%M %p")
              %td.text= record.category.name
              %td Some Description
              %td
                - if is_negative_amount?(record)
                  %span.red-record.text= record.amount
                - else
                  %span.blue-record.text= record.amount
