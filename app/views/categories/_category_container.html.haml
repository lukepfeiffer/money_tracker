.category
  .card
    .category-name
      %h1= category.name
    .amount
      = number_to_currency(category.amount, format: "%n %u")
    .card-copy
      %p= category.description
      .actions
        %button.add-funds Add
        - if category.id.present?
          %button.archive{data: {url: category_path(category.id), id: category.id}} Delete
